<h1>Users <%= link_to "Create User", new_admin_user_path, :class => 'btn btn-success headerButton' %></h1>

<br>

<table class="table">
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, admin_user_path(user) %></td>
        <td><%= user.email %></td>
        <td><%= link_to "Edit", edit_admin_user_path(user), :class => 'btn btn-warning pull-right' %></td>
        <td><%= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger pull-right' %></td>
      </tr>
    <% end %>
  </tbody>
</table>