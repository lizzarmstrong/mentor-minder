<button type="button" class="btn btn-default pull-right"><%= link_to 'New Mentor', new_mentor_path %></button>

<h1>Mentors</h1>

<br>

<table class="table homeTable">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Gender</th>
      <th>Email</th>
      <th>First Aid Certified?</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @mentors.each do |mentor| %>
      <tr>
        <td><%= link_to mentor.first_name, mentor %></td>
        <td><%= link_to mentor.last_name, mentor %></td>
        <td><%= mentor.gender %></td>
        <td><%= mentor.email %></td>
        <td><%= mentor.first_aid_certified %></td>
        <td><%= link_to 'Show', mentor %></td>
        <td><%= link_to 'Edit', edit_mentor_path(mentor) %></td>
        <td><%= link_to 'Destroy', mentor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
