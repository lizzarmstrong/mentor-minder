<button type="button" class="btn btn-primary pull-right"><%= link_to 'New Event', new_event_path %></button>

<h1>Events</h1>

<br>

<table class="table homeTable">
  <thead>
    <tr>
      <th>Category</th>
      <th>Age group</th>
      <th>Topic</th>
      <th>Event date</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.category %></td>
        <td><%= event.age_group %></td>
        <td><%= event.topic %></td>
        <td><%= event.event_date %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

