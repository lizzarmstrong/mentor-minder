<%= search_form_for @q do |f| %>
  <%= f.label :topic_cont %>
  <%= f.search_field :topic_cont %>
  <%= f.submit %>
<% end %>

<button type="button" class="btn btn-default pull-right"><%= link_to 'New Event', new_event_path %></button>

<h1>Events</h1>

<br>

<table class="table homeTable">
  <thead>
    <tr>
      <th><%= sort_link @q, :category, "Category" %></th>
      <th><%= sort_link @q, :age_group, "Age Group" %></th>
      <th><%= sort_link @q, :topic, "Topic" %></th>
      <th><%= sort_link @q, :event_date, "Event Date" %></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.category %></td>
        <td><%= event.age_group %></td>
        <td><%= event.topic %></td>
        <td><%= event.event_date %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

