<%= form_for(@event) do |f| %>
<% if @event.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

    <ul>
    <% @event.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <div class="row">
    <div class="col-md-4">
      <div class="field">
        <%= f.label :category %><br>
        <%= f.select :category, ([["Select One", ""], "Girls Learning Code", "Kids Learning Code"]) %>
      </div>
      <div class="field">
        <%= f.label :age_group %><br>
        <%= f.select :age_group, ([["Select One", ""], "6-8", "9-12", "13-16"]) %>
      </div>
      <div class="field">
        <%= f.label :topic %><br>
        <%= f.text_field :topic, :class => 'form-control' %>
      </div>
      <div class="field">
        <%= f.label :event_date %><br>
        <%= f.date_select :event_date %>
      </div>

      <br>

      <div class="actions">
        <%= f.submit :class => 'btn btn-success' %>
      </div>
    </div>
  </div>
<% end %>
